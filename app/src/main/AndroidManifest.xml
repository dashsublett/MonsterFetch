<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dsublett.monsterfetch">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ahriman_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ahriman_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activities.AbilityActivity"
            android:parentActivityName=".activities.MonsterDetailActivity"
            android:label="@string/title_activity_ability"
            android:theme="@style/NoActionBar"></activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MonsterDetailActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ClassDetailActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.SpellDetailActivity"
            android:parentActivityName=".activities.MainActivity" />
    </application>

</manifest>
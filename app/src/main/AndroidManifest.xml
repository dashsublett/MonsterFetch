<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dsublett.monsterfetch">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ahriman_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ahriman_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:fullBackupContent="@xml/backup_descriptor"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MonsterDetail"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.ClassDetail"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.SpellDetail"
            android:parentActivityName=".activities.MainActivity"/>
    </application>
</manifest>
